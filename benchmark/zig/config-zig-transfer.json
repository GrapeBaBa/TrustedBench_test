{
  "blockchain": {
    "type": "zigledger",
    "config": "benchmark/zig/zig-transfer.json"
  },
  "command" : {
  },
  "test": {
    "clients": {
      "type": "local",
      "number": 2
    },
    "rounds": [{
      "label" : "transfer",
      "txNumber" : [500],
      "rateControl" : [{"type": "fixed-rate", "opts": {"tps" : 100}}],
      "arguments": {  "path": "sign.json", "amount": 100},
      "callback" : "benchmark/zig/transfer.js"
    }]
  },
  "monitor": {
    "type": ["docker", "process"],
    "docker":{
      "name": ["all"]
    },
    "process": [
      {
        "command" : "node",
        "arguments" : "local-client.js",
        "multiOutput" : "avg"
      }
    ],
    "interval": 1
  }
}
{
  "blockchain": {
    "type": "zigledger",
    "config": "benchmark/zig/zigledger-remote.json"
  },
  "test": {
    "clients": {
      "type": "local",
      "number": 10
    },
    "rounds": [
      {
        "label": "transfer",
        "txNumber": [
          50000
        ],
        "rateControl": [
          {
            "type": "fixed-rate",
            "opts": {
              "tps": 1000
            }
          }
        ],
        "arguments": {
          "path": "sign.json",
          "amount": 100
        },
        "callback": "benchmark/zig/transfer.js"
      }
    ]
  },
  "monitor": {
    "type": [
      "docker",
      "process"
    ],
    "docker": {
      "name": [
        "http://192.168.0.30:2375/orderer0",
        "http://192.168.0.30:2375/ka0",
        "http://192.168.0.30:2375/zoo0",
        "http://192.168.0.31:2375/ka1",
        "http://192.168.0.31:2375/zoo1",
        "http://192.168.0.31:2375/orderer1",
        "http://192.168.0.32:2375/peer1-org2",
        "http://192.168.0.32:2375/ka2",
        "http://192.168.0.32:2375/zoo2",
        "http://192.168.0.33:2375/peer1-org1",
        "http://192.168.0.33:2375/ka3",
        "http://192.168.0.34:2375/ca0",
        "http://192.168.0.34:2375/peer0-org1",
        "http://192.168.0.35:2375/ca1",
        "http://192.168.0.35:2375/peer0-org2"
      ]
    },
    "process": [
      {
        "command": "node",
        "arguments": "local-client.js",
        "multiOutput": "avg"
      }
    ],
    "interval": 1
  }
}